{
  "name": "cddl",
  "version": "0.2.2",
  "description": "Concise data definition language (RFC 8610) implementation and JSON validator in Node.js",
  "export": "build/index.js",
  "bin": {
    "cddl": "./bin/cddl.js"
  },
  "scripts": {
    "build": "run-s clean compile",
    "clean": "rm -rf ./build ./coverage",
    "compile": "tsc -p ./tsconfig.json",
    "test": "vitest",
    "watch": "tsc --watch",
    "release": "release-it --github.release",
    "release:ci": "npm run release -- --ci --npm.skipChecks --no-git.requireCleanWorkingDir",
    "release:patch": "npm run release -- patch",
    "release:minor": "npm run release -- minor",
    "release:major": "npm run release -- major"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/christian-bromann/cddl.git"
  },
  "keywords": [
    "cddl"
  ],
  "author": "Christian Bromann <christian@saucelabs.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/christian-bromann/cddl/issues"
  },
  "homepage": "https://github.com/christian-bromann/cddl#readme",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.6",
    "@vitest/coverage-c8": "^0.29.2",
    "npm-run-all": "^4.1.5",
    "release-it": "^15.7.0",
    "typescript": "^4.9.5",
    "vitest": "^0.29.2"
  },
  "dependencies": {
    "yargs": "^17.7.1"
  }
}
